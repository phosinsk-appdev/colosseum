<div>
  <div>
    <h1>
      Games player #<%= @the_games_player.id %> details
    </h1>

    <div>
      <div>
        <a href="/games_players">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_games_player/<%= @the_games_player.id %>">
          Delete games player
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Player
      </dt>
      <dd>
        <%= @the_games_player.player_id %>
      </dd>

      <dt>
        Game
      </dt>
      <dd>
        <%= @the_games_player.game_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_games_player.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_games_player.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit games player
    </h2>

    <form action="/modify_games_player/<%= @the_games_player.id %>"  method="post" >
      <div>
        <label for="player_id_box">
          Player
        </label>

        <input type="text" id="player_id_box" name="query_player_id" value="<%= @the_games_player.player_id %>">
      </div>

      <div>
        <label for="game_id_box">
          Game
        </label>

        <input type="text" id="game_id_box" name="query_game_id" value="<%= @the_games_player.game_id %>">
      </div>

      <button>
        Update games player
      </button>
    </form>
  </div>
</div>

<hr>
